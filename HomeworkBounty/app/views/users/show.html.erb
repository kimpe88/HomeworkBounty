<p id="notice"><%= notice %></p>
<div class="user_info">
	<p>Username: <%= @user.username %></p>
	<p>Country: <%= @user.school.country.name %></p>
	<p>School: <%= @user.school.name %></p>
	<% if can? :update, @user %>
		<p><%= link_to 'Edit', edit_user_registration_path %></p>
	<% end %>
</div>


<div class="user_question_answer" >
	<div  class="user_question_answer_element">
		<h3>Questions</h3>
		<ul class="user_questions">
			<% @user.questions_made.limit(10).each do |question| %>
				<li> <%= link_to question.title, question_path(question)  %> </li>
			<% end %>
		</ul>
	</div>

	<div class="user_question_answer_element">
		<h3>Answers</h3>
		<ul class="user_answers">
			<% @user.answers_made.limit(10).each do |answer| %>
				<li> <%= link_to answer.question.title, question_path(answer.question)  %> </li>
			<% end %>
		</ul>
	</div>
</div>


