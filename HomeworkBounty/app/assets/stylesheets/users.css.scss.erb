.user_info a, .user_question_answer a{
	text-decoration: none;
}
	.user_info a:hover, .user_question_answer a:hover{
		background-color: transparent;
	}

.user_info{
	width:auto;
	height:auto;
	padding:20px 40px;
	margin:auto;
	border-bottom:solid 1px #CBCBCE;
}
	.user_info:after{
			content:'';
			display:block;
			clear: both;
	}
	.user_info p{
		margin:0;
	}
	.user_info .profile_picture{
		background: url(<%= asset_path 'default_avatar.png' %>) top left no-repeat;
		height:215px;
		width:215px;
		float:left;
		-webkit-box-shadow: 0 8px 6px -6px black;
	  -moz-box-shadow: 0 8px 6px -6px black;
	  box-shadow: 0 8px 6px -6px black;
	}
	.user_info .user_bio{
			margin-left:40px;
			height:215px;
			width:215px;
			float:left;
	}
	.user_info .user_stats{
		height:215px;
		width:215px;
		float:right;
	}
	
.user_question_answer{
	width:100%;
	height:auto;
	margin:auto;
	padding:20px 40px;
}
.user_question_answer_element{
	width:50%;
	height:auto;
	float:left;
}