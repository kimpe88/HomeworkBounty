div#answer_form_container
{
	display: none
}
.odd{
	background-color:inherit;
}
.even{
	background-color:#DFDFD5;
}

.newest_questions{
	width:50%;
	height:auto;
	float:left;
}
	.newest_questions a{
		text-decoration:none;
	}
	
	.newest_questions .box{
		width:100%;
		height:auto;
		background:#FFF;
		margin:40px auto;
	}
	
	.newest_questions table{
		width:100%;
	}
	.newest_questions table tr,.newest_questions table tr td{
		width:100%;
		padding: 5px 15px;
	}
	
	
	.newest_questions .shadow_effect{
			position:relative;       
			-webkit-box-shadow:0 1px 4px rgba(0, 0, 0, 0.3), 0 0 40px rgba(0, 0, 0, 0.1) inset;
				 -moz-box-shadow:0 1px 4px rgba(0, 0, 0, 0.3), 0 0 40px rgba(0, 0, 0, 0.1) inset;
							box-shadow:0 1px 4px rgba(0, 0, 0, 0.3), 0 0 40px rgba(0, 0, 0, 0.1) inset;
	}
	.newest_questions .shadow_effect:before,.newest_questions .shadow_effect:after{
		content:"";
			position:absolute; 
			z-index:-1;
			-webkit-box-shadow:0 0 20px rgba(0,0,0,0.8);
			-moz-box-shadow:0 0 20px rgba(0,0,0,0.8);
			box-shadow:0 0 20px rgba(0,0,0,0.8);
			top:10px;
			bottom:10px;
			left:0;
			right:0;
			-moz-border-radius:100px / 10px;
			border-radius:100px / 10px;
	} 
	.newest_questions .shadow_effect:after{
		right:10px; 
			left:auto;
			-webkit-transform:skew(8deg) rotate(3deg); 
				 -moz-transform:skew(8deg) rotate(3deg);     
					-ms-transform:skew(8deg) rotate(3deg);     
					 -o-transform:skew(8deg) rotate(3deg); 
							transform:skew(8deg) rotate(3deg);
	}

.semi_questions{
	width:40%;
	height:auto;
	margin-bottom:10px;
	float:right;
}

/*Button*/ 
.button_tmp, .button_tmp a {
	display: inline-block;
	-webkit-border-radius: 4px;
	-moz-border-radius: 4px;
	border-radius: 4px;
	height:37px;
	color:#226;
}

.button_tmp a:hover{
	color:#226;
}

.button_tmp {
	white-space: nowrap;
	padding:7px 15px;
	text-align:center;
	text-shadow:0 1px 1px rgba(0, 0, 0, 0.25);
	font-size:16px;
	font-weight:bold;
	line-height:1em;
	position:relative;
	outline: none;
	overflow: visible; 
	cursor: pointer;
	border: 1px solid #999;
	border: rgba(0, 0, 0, .2) 1px solid;
	border-bottom:rgba(0, 0, 0, .4) 1px solid;
	-webkit-box-shadow: 0 1px 2px rgba(0,0,0,.2);
	-moz-box-shadow: 0 1px 2px rgba(0,0,0,.2);
	box-shadow: 0 1px 2px rgba(0,0,0,.2);
	background: -moz-linear-gradient(
		center top,
		rgba(255, 255, 255, .1) 0%,
		rgba(0, 0, 0, .1) 100%
	);/* FF3.6 */
	background: -webkit-gradient(
		linear,
		center bottom,
		center top,
		from(rgba(0, 0, 0, .1)),
		to(rgba(255, 255, 255, .1))
	);/* Saf4+, Chrome */
	filter:  progid:DXImageTransform.Microsoft.gradient(startColorStr='#19FFFFFF', EndColorStr='#19000000'); /* IE6,IE7 */
	-ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorStr='#19FFFFFF', EndColorStr='#19000000')"; /* IE8 */
	-moz-user-select: none;
	-webkit-user-select:none;
	-khtml-user-select: none;
	user-select: none;
	margin-bottom:10px;
}
.button_tmp:hover, .button_tmp.hover {
	background: -moz-linear-gradient(
		center top,
		rgba(255, 255, 255, .2) 0%,
		rgba(255, 255, 255, .1) 100%
	);/* FF3.6 */
	background: -webkit-gradient(
		linear,
		center bottom,
		center top,
		from(rgba(255, 255, 255, .1)),
		to(rgba(255, 255, 255, .2))
	);/* Saf4+, Chrome */
	filter:  progid:DXImageTransform.Microsoft.gradient(startColorStr='#33FFFFFF', EndColorStr='#19FFFFFF'); /* IE6,IE7 */
	-ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorStr='#33FFFFFF', EndColorStr='#19FFFFFF')"; /* IE8 */
}
.button_tmp:active, .button_tmp.active {
	top:1px;
}
.button_tmp.blue {
	background-color: #09F;
}
.button_tmp.orange {
	background-color: #FC3;
}
.button_tmp.green {
	background-color: #0C3;
}
.button_tmp.red {
	background-color: #900;
}
.button_tmp.black {
	background-color: #333;
}

