div#answer_form_container
{
	display: none
}
.odd{
	background-color:inherit;
}
.even{
	background-color:#DFDFD5;
}

.newest_questions{
	width:50%;
	height:auto;
	float:left;
}
	.newest_questions a{
		text-decoration:none;
	}
	.newest_questions a:visited{
		color:#0090C5;
	}
	.newest_questions a:hover{
		background-color:transparent;
	}

	.newest_questions .box{
		width:100%;
		height:auto;
		background:#FFF;
		margin:40px auto;
		padding:0px;
	}

	.newest_questions table{
		width:100%;
	}
	.newest_questions table tr,.newest_questions table tr td{
		width:100%;
		padding: 5px 15px;
	}


	.newest_questions .shadow_effect{
			position:relative;
			-webkit-box-shadow:0 1px 4px rgba(0, 0, 0, 0.3), 0 0 40px rgba(0, 0, 0, 0.1) inset;
				-moz-box-shadow:0 1px 4px rgba(0, 0, 0, 0.3), 0 0 40px rgba(0, 0, 0, 0.1) inset;
							box-shadow:0 1px 4px rgba(0, 0, 0, 0.3), 0 0 40px rgba(0, 0, 0, 0.1) inset;
	}
	.newest_questions .shadow_effect:before,.newest_questions .shadow_effect:after{
		content:"";
			position:absolute;
			z-index:-1;
			-webkit-box-shadow:0 0 20px rgba(0,0,0,0.8);
			-moz-box-shadow:0 0 20px rgba(0,0,0,0.8);
			box-shadow:0 0 20px rgba(0,0,0,0.8);
			top:10px;
			bottom:10px;
			left:0;
			right:0;
			-moz-border-radius:100px / 10px;
			border-radius:100px / 10px;
	}
	.newest_questions .shadow_effect:after{
		right:10px;
			left:auto;
			-webkit-transform:skew(8deg) rotate(3deg);
				-moz-transform:skew(8deg) rotate(3deg);
					-ms-transform:skew(8deg) rotate(3deg);
					-o-transform:skew(8deg) rotate(3deg);
							transform:skew(8deg) rotate(3deg);
	}

.semi_questions{
	width:45%;
	height:auto;
	margin-bottom:10px;
	float:right;
}

.answer_header_wrapper{
	width:100%;
}

	.answer_header_wrapper:after{
		content:'';
			display:block;
			clear: both;
	}

.answer_header{
	margin:0px;
	width:50%;
	float:left;
	overflow: hidden;
}
	.answer_header h3{
		margin:0px;
	}
.answer_buttons{
	width:auto;
	float:right;
	margin-left:30px;
}

.answer_element_wrapper{
	width:100%;
	height:auto;
	overflow: hidden;
}
.posted_by{
	float:left;
	width:20%;
	height:100%;
	padding:5px;
	text-align:center;
	overflow: hidden;
}

	.posted_by p{
		width:110px;
		padding-left:5px;
		font-size:10px;
		margin:0;
		text-align:left;	
	}

	
	.posted_by .user_image{
		-moz-border-radius:10px;
		border-radius:10px;
		height:80px;
		width:70px;
		background:url(<%= asset_path 'default_avatar_thumb.png' %>) top left no-repeat;
	}
.answer_body{
	width:80%;
	height:auto;
	float:left;
	padding:10px;
}

#answer_form_container{
	postition:relative;
	width:100%;
	height:auto;
}

.question_title{
